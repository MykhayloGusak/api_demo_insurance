{
  "openapi": "3.0.2",
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "authentication_body": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "example@email.com"
          }
        }
      },
      "token": {
        "type": "object",
        "properties": {
          "token": {
            "type": "string",
            "example": "123"
          }
        }
      },
      "400_data_validation_error": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "'email' is required"
          }
        }
      },
      "404_not_found_error": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "User Not Found"
          }
        }
      },
      "500_internal_server_error": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "Internal Server Error"
          }
        }
      }
    }
  },
  "servers": [
    {
      "url": "http://localhost:3030/",
      "description": "Local server"
    }
  ],
  "info": {
    "description": "REST API Documentation",
    "version": "0.0.1",
    "title": "REST API Documentation",
    "contact": {
      "name": "REST API example",
      "url": "https://www.linkedin.com/in/mykhaylo-gusak/",
      "email": "mykhaylo.gusak@hotmail.com"
    },
    "license": {
      "name": "Apache 2.0",
      "url": "https://github.com/MykhayloGusak/api_demo_insurance"
    }
  },
  "paths": {
    "/login": {
      "post": {
        "tags": ["Authentication"],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "summary": "User authentication",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/authentication_body"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User successfully authenticated",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/token"
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/400_data_validation_error"
                }
              }
            }
          },
          "404": {
            "description": "Not Found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/404_not_found_error"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/500_internal_server_error"
                }
              }
            }
          }
        }
      }
    }
  }
}
